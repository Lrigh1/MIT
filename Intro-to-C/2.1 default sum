/*Now write just one function that, using default arguments, allows you to take the sum of
anywhere between 2 and 4 integers
----------------------------------------
*/

#include <iostream>

using namespace std;

int sum(int a, int b, int c = 0, int d = 0)
{
	cout << a+b+c+d << endl;
	return 0;
}

int main()
{
	sum(2,3);

system ("pause");
}
